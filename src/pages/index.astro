---
import CardSkills from "../components/CardSkills.astro";
import Footer from "../components/Footer.astro";
import Navegador from "../components/Navegador.astro";
import SobreMi from "../components/SobreMi.astro";
import Titulo from "../components/Titulo.astro";
import Estudios from "../componentsJson/Estudios.astro";
import Experiencias from "../componentsJson/Experiencias.astro";
import Referencias from "../componentsJson/Referencias.astro";
import Skills from "../componentsJson/Skills.astro";
import Layout from "../layouts/Layout.astro";


---

<Layout title="Portfolio de Pepe">
	<Navegador/>
	<SobreMi />
	<Titulo id="estudios" titulo="Estudios" icono="../../img/book_3_24dp_5F6368_FILL0_wght400_GRAD0_opsz24.png" />
	<Estudios />
	<Titulo id="skills" class="mt-44" titulo="My Skills" icono="../../img/star.png" />
	<Skills />
	<Titulo id="experiencia" class="mt-44" titulo="Experiencia Laboral" icono="../../img/maletin.png.png" />
	<Experiencias />
	<Titulo id="proyectos" class="mt-40" titulo="Proyectos" icono="../../img/zip.png" />
	<Titulo id="referencias" class="mt-40" titulo="Referencias" icono="../../img/boy.png" />
	<h2 class="text-2xl font-semibold text-center text-[#656565] pt-20">La gente con la que he trabajado ha dicho...</h2>
	<Referencias />
	<Titulo id="contacto" class="mt-36" titulo="Contacto" icono="../../img/contacto.png" />
	<div class="max-w-2xl mx-auto mt-16 bg-white p-8 rounded-lg shadow-lg min-h-[600px] mb-16">
		<form class="space-y-6">
			<div>
				<label for="nombre" class="block text-gray-700 font-bold mb-2">Nombre</label>
				<input type="text" id="nombre" name="nombre" placeholder="Introduce tu nombre" class="w-full p-4 border rounded-md bg-gray-100"/>
			</div>
			<div>
				<label for="email" class="block text-gray-700 font-bold mb-2">Email</label>
				<input type="email" id="email" name="email" placeholder="Introduce tu email" class="w-full p-4 border rounded-md bg-gray-100"/>
			</div>
			<div>
				<label for="mensaje" class="block text-gray-700 font-bold mb-2">Mensaje</label>
				<textarea id="mensaje" name="mensaje" placeholder="Introduce tu mensaje" rows="6" class="w-full p-4 border rounded-md bg-gray-100"></textarea>
			</div>
			<button type="submit" class="w-full bg-[#DB972B] text-white font-bold py-3 rounded-md hover:opacity-75 transition-opacity">Enviar</button></form>
	</div>
	<Footer />
</Layout>

